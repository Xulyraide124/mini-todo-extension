{
  "manifest_version": 3,
  "name": "Mini-Gestionnaire de Tâches",
  "version": "1.0",
  "description": "Une extension simple pour gérer vos tâches à faire.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
